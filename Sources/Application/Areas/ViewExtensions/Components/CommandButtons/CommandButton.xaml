<UserControl x:Class="Mmu.Mlh.WpfExtensions.Areas.ViewExtensions.Components.CommandButtons.CommandButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Mmu.Mlh.WpfExtensions.Areas.ViewExtensions.Components"
             mc:Ignorable="d"
             x:Name="Uc"
             d:DesignHeight="450" d:DesignWidth="800">
    <Button
        Content="{Binding Description, Mode=OneWay}"
        Command="{Binding Command, Mode=OneWay}"
        DataContext="{Binding Path=ViewModelCommand, ElementName=Uc, Mode=TwoWay}" />
</UserControl>