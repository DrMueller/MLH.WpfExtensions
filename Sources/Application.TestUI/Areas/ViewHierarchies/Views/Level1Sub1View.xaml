             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Mmu.Mlh.WpfExtensions.TestUI.Areas.ViewHierarchies.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
